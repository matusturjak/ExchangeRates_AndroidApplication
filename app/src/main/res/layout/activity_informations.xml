<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Informations"
    android:background="#4B4A5A">

    <TextView
        android:id="@+id/pripomienky"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you have any suggestion..  "
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:textColor="#BABABA" />

    <EditText
        android:id="@+id/pripomienky_edit_text"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/pripomienky"
        android:background="@android:color/white"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:gravity="start|top"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/send_button"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:text="Send"
        android:layout_below="@+id/pripomienky_edit_text"
        android:onClick="sendEmail"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/info_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_button"
        android:layout_margin="10dp"
        android:textColor="#BABABA"
        android:text="Used data in app are downloaded from https://exchangeratesapi.io/ "/>

</RelativeLayout>